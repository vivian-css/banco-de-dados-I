    private void MenCadFerActionPerformed(java.awt.event.ActionEvent evt) {                                          
    
        TelaAluguel ferramentas=new TelaAluguel ();
        ferramentas.setVisible(true);
        desktop.add(ferramentas);
    }                                         

    private void MenuCadUsuActionPerformed(java.awt.event.ActionEvent evt) {                                           
       
        TelaUsuario usuario = new TelaUsuario();
        usuario.setVisible(true);
        desktop.add(usuario);
        
    }                                          

    private void MenuSairActionPerformed(java.awt.event.ActionEvent evt) {                                         
      
         int sair = JOptionPane.showConfirmDialog(null, "Tem Certeza que Deseja Sair ?","Atenção",JOptionPane.YES_NO_OPTION);
         if (sair == JOptionPane.YES_OPTION){
             
             System.exit(0);
         }
    }                                        

    private void formWindowActivated(java.awt.event.WindowEvent evt) {                                     

     Date data = new Date();
     DateFormat formatador = DateFormat.getDateInstance(DateFormat.SHORT);
     lblData.setText(formatador.format(data));
     
    }                                    

    private void MenuopcActionPerformed(java.awt.event.ActionEvent evt) {                                        
        
       
    }                                       

    private void MenuCadCActionPerformed(java.awt.event.ActionEvent evt) {                                         
   
